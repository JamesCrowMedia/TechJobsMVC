@{
    ViewBag.isChecked = null;
}

<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            @if (@column.Key == ViewBag.searchType)
            {
                ViewBag.isChecked = "checked";

            }
            else
            {
                ViewBag.isChecked = null;
            }

            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key"
                       checked="@ViewBag.isChecked" />
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" value="@ViewBag.searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>

    // TODO #2 - Loop over jobs dictionary and display all job fields
    
    @foreach (Dictionary<string, string> job in ViewBag.jobs)
    {
        <table class="job-listing">
        @foreach (KeyValuePair<string, string> detail in job)
            {
            <tr>
                <td>@detail.Key</td>
                <td>@detail.Value</td>
            </tr>
            }
        </table>
    }
    
}